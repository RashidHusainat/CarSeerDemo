@using CarSeerDemo.ViewModels
@model SearchFormViewModel
@{
    ViewData["Title"] = "Search Result";
}


<link href="~/css/searchresult.css" rel="stylesheet" asp-append-version="true" />


<!-- Top Header -->
<div class="top-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <a href="/Home/Index" class="logo">
                <i class="fas fa-car me-2"></i>
                Vehicle Lookup
            </a>
            <a href="/Home/Index" class="btn-back">
                <i class="fas fa-arrow-left me-2"></i>
                New Search
            </a>
        </div>
    </div>
</div>

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <h1>
            <i class="fas fa-search-plus me-2"></i>
            Search Results
        </h1>
    </div>
</div>

<!-- Content Section -->
<div class="content-section">
    <div class="container">

        <!-- Search Criteria Card -->
        <div class="search-criteria-card fade-in">
            <div class="criteria-title">
                <i class="fas fa-filter me-2"></i>
                Search Criteria
            </div>
            <div class="criteria-row">
                <div class="criteria-item">
                    <i class="fas fa-car-side"></i>
                    <div>
                        <div class="criteria-label">Make</div>
                        <div class="criteria-value" id="displayMake">-</div>
                    </div>
                </div>
                <div class="criteria-item">
                    <i class="fas fa-calendar-alt"></i>
                    <div>
                        <div class="criteria-label">Year</div>
                        <div class="criteria-value" id="displayYear">-</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Vehicle Types Section -->
        <div class="section-card fade-in" style="animation-delay: 0.1s;">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-list-check me-2"></i>
                    Available Vehicle Types
                </h2>
                <p class="section-subtitle">Vehicle categories available for this make</p>
            </div>

            <div id="vehicleTypesLoading" class="loading-state">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p>Loading vehicle types...</p>
            </div>

            <div id="vehicleTypesContent"></div>
        </div>

        <!-- Models Section -->
        <div class="section-card fade-in" style="animation-delay: 0.2s;">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-cars me-2"></i>
                    Available Models
                </h2>
                <p class="section-subtitle">All models matching your search criteria</p>
            </div>

            <div id="modelsLoading" class="loading-state">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p>Loading vehicle models...</p>
            </div>

            <div id="modelsContent"></div>
        </div>

    </div>
</div>

@section Scripts {

    <script src="~/js/search-result.js" asp-append-version="true"></script>
}

